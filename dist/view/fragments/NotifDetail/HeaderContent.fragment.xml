<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
>
    <FlexBox
        wrap="Wrap"
        fitContainer="true"
        alignItems="Start"
        alignContent="Start"
        justifyContent="Start"
    >
        <Image
            class="sapUiSmallMarginEnd"
            src="{ value: 'karsan_logo.png', formatter: '.formatter.getImage' }"
        />

        <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
            >
                <Label
                    text="{/#Report/Ernam/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text text="{viewModel>/Header/ErnamFullname}" />
            </HBox>

            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
            >
                <Label
                    text="{/#Report/Aenam/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text text="{viewModel>/Header/AenamFullname}" />
            </HBox>
        </VBox>

        <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
            >
                <Label
                    text="{/#Report/Erdat/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text
                    text="{ 'path': 'viewModel>/Header/Erdat', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                />
            </HBox>

            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
            >
                <Label
                    text="{/#Report/Aedat/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text
                    text="{ 'path': 'viewModel>/Header/Aedat', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                />
            </HBox>
        </VBox>

        <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
            >
                <Label
                    text="{/#Report/Qmdab/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text
                    text="{ 'path': 'viewModel>/Header/Qmdab', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                />
            </HBox>

            <HBox
                class="sapUiTinyMarginBottom"
                renderType="Bare"
                visible="false"
            >
                <Label
                    text="{/#Report/Prueflos/@sap:label}"
                    class="sapUiTinyMarginEnd"
                    showColon="true"
                />
                <Text
                    text="{ path: 'viewModel>/Header/Prueflos', formatter: '.formatter.formatPrueflos' }"
                />
            </HBox>
        </VBox>
    </FlexBox>
</core:FragmentDefinition>
