                        hAlign="Center"
                    >
                        <Label text="{/#Report/Kaynak/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "80", "columnKey": "Kaynak", "additionalProperty":"Kaynak", "leadingProperty": "Kaynak",  "autoColumnWidth": \{ "visibleProperty": "KaynakTxt" }, "sortProperty": "Kaynak", "filterProperty":"Kaynak"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{KaynakTxt}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Begda"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Begda/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "90", "columnKey": "Begda", "additionalProperty":"Begda", "leadingProperty": "Begda", "autoColumnWidth": \{ "visibleProperty": "Begda" }, "sortProperty": "Begda", "filterProperty":"Begda"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text
                                text="{ 'path': 'Begda', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Endda"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Endda/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "100", "columnKey": "Endda", "additionalProperty":"Endda", "leadingProperty": "Endda", "autoColumnWidth": \{ "visibleProperty": "Endda" }, "sortProperty": "Endda", "filterProperty":"Endda"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text
                                text="{ 'path': 'Endda', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Qmdab"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Qmdab/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "110", "columnKey": "Qmdab", "additionalProperty":"Qmdab", "leadingProperty": "Qmdab", "autoColumnWidth": \{ "visibleProperty": "Qmdab" }, "sortProperty": "Qmdab", "filterProperty":"Qmdab"}'
