                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "10", "columnKey": "RefQmnum", "additionalProperty":"RefQmnum", "leadingProperty": "RefQmnum", "autoColumnWidth": \{ "visibleProperty": "Endda" }, "sortProperty": "RefQmnum", "filterProperty":"RefQmnum"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{RefQmnum}" />
                        </ui:template>
                    </ui:Column>


                    <ui:Column
                        filterProperty="Ernam"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Ernam/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "20", "columnKey": "Ernam", "additionalProperty":"Ernam", "leadingProperty": "Ernam", "autoColumnWidth": \{ "visibleProperty": "ErnamFullname" },"sortProperty": "Ernam", "filterProperty":"Ernam"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{ErnamFullname}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Erdat"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Erdat/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "30", "columnKey": "Erdat", "additionalProperty":"Erdat", "leadingProperty": "Erdat", "autoColumnWidth": \{ "visibleProperty": "Erdat" }, "sortProperty": "Erdat", "filterProperty":"Erdat"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text
                                text="{ 'path': 'Erdat', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Aenam"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Aenam/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "40", "columnKey": "Aenam", "additionalProperty":"Aenam", "leadingProperty": "Aenam",  "autoColumnWidth": \{ "visibleProperty": "AenamFullname" }, "sortProperty": "Aenam", "filterProperty":"Aenam"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{AenamFullname}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        filterProperty="Aedat"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Aedat/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "50", "columnKey": "Aedat", "additionalProperty":"Aedat", "leadingProperty": "Aedat", "autoColumnWidth": \{ "visibleProperty": "Aedat" }, "sortProperty": "Aedat", "filterProperty":"Aedat"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text
                                text="{ 'path': 'Aedat', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/y' } }"
                            />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        filterProperty="Aprgr"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Aprgr/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "55", "columnKey": "Aprgr", "additionalProperty":"Aprgr", "leadingProperty": "Aprgr",  "autoColumnWidth": \{ "visibleProperty": "Agrtx" }, "sortProperty": "Aprgr", "filterProperty":"Aprgr"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{Agrtx}" />
