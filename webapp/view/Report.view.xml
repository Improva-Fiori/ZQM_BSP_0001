<mvc:View
    controllerName="com.karsan.qm.sapmaportali.controller.Report"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ui="sap.ui.table"
>
    <semantic:SemanticPage
        fitContent="true"
        toggleHeaderOnTitleClick="false"
    >
        <semantic:headerContent>
            <smartFilterBar:SmartFilterBar
                id="idSfbReportSet"
                entitySet="ReportSet"
                persistencyKey="SmartFilterPKey"
                showClearOnFB="true"
                showRestoreOnFB="false"
                showGoOnFB="true"
                showRestoreButton="false"
                showFilterConfiguration="false"
            >
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration
                        key="RefQmnum"
                        label="{i18n>RefQmnum}"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Erdat"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Aedat"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Aprgr"
                        filterType="multiple"
                        controlType="dropDownList"
                        displayBehaviour="descriptionAndId"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Aprdt"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Begda"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Endda"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Qmdab"
                        filterType="interval"
                        controlType="date"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Statu"
                        filterType="multiple"
                        controlType="dropDownList"
                        displayBehaviour="descriptionOnly"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Kaynak"
                        filterType="single"
                        controlType="dropDownList"
                        displayBehaviour="descriptionOnly"
                    /> 
                    <smartFilterBar:ControlConfiguration
                        key="Lifnr"
                        label="{i18n>Lifnr}"
                    />
                </smartFilterBar:controlConfiguration>
            </smartFilterBar:SmartFilterBar>
        </semantic:headerContent>
        <semantic:content>
            <smartTable:SmartTable
                id="idStReport"
                entitySet="ReportSet"
                smartFilterId="idSfbReportSet"
                tableType="Table"
                enableExport="true"
                beforeExport="onBeforeExport"
                useVariantManagement="true"
                useTablePersonalisation="true"
                header="{i18n>TotalFound}"
                showRowCount="true"
                showFullScreenButton="true"
                showVariantManagement="true"
                demandPopin="false"
                enableAutoColumnWidth="true"
                enableAutoBinding="false"
                persistencyKey="SmartTableAnalytical_Explored"
                ignoredFields=""
                initiallyVisibleFields=""
                requestAtLeastFields="Agrtx,StatuTxt,ErnamFullname,AenamFullname,KaynakTxt"
                ignoreFromPersonalisation="Agrtx,StatuTxt,ErnamFullname,AenamFullname,KaynakTxt,Aprvr"
                beforeRebindTable="onAfterRendering"
            >
                <smartTable:customToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            text="{i18n>New}"
                            type="Transparent"
                            icon="sap-icon://add"
                            press="onNewNotif"
                        />
                    </OverflowToolbar>
                </smartTable:customToolbar>

                <ui:Table
                    id="idReportTable"
                    alternateRowColors="true"
                    fixedColumnCount="1"
                    selectionMode="Single"
                    rowMode="Auto"
                    selectionBehavior="RowOnly"
                    cellClick="onSelectNotif"
                >
                    <ui:Column
                        filterProperty="Qmnum"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Qmnum/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "0", "columnKey": "Qmnum", "additionalProperty":"Qmnum", "leadingProperty": "Qmnum", "autoColumnWidth": \{ "visibleProperty": "Endda" }, "sortProperty": "Qmnum", "filterProperty":"Qmnum"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{Qmnum}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        filterProperty="Statu"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Statu/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "5", "columnKey": "Statu", "additionalProperty":"Statu", "leadingProperty": "Statu", "autoColumnWidth": \{ "visibleProperty": "StatuTxt" }, "sortProperty": "Statu", "filterProperty":"Statu"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{StatuTxt}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        filterProperty="Lifnr"
                        hAlign="Center"
                    >
                        <Label text="{i18n>Lifnr}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "6", "columnKey": "Lifnr", "additionalProperty":"Lifnr", "leadingProperty": "Lifnr", "autoColumnWidth": \{ "visibleProperty": "Endda" }, "sortProperty": "Lifnr", "filterProperty":"Lifnr"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{Lifnr}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        filterProperty="LfName1"
                        hAlign="Center"
                    >
                        <Label text="{i18n>LfName1}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "10", "columnKey": "LfName1", "additionalProperty":"LfName1", "leadingProperty": "LfName1", "autoColumnWidth": \{ "visibleProperty": "Endda" }, "sortProperty": "LfName1", "filterProperty":"LfName1"}'
                            />
                        </ui:customData>
                        <ui:template>
                            <Text text="{LfName1}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        filterProperty="RefQmnum"
                        hAlign="Center"
                    >
