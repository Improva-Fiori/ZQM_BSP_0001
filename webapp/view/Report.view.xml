                    <ui:Column
                        filterProperty="Prueflos"
                        hAlign="Center"
                    >
                        <Label text="{/#Report/Prueflos/@sap:label}" />
                        <ui:customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnIndex": "120", "columnKey": "Prueflos", "additionalProperty":"Prueflos", "leadingProperty": "Prueflos",  "autoColumnWidth": \{ "visibleProperty": "Prueflos" }, "sortProperty": "Prueflos", "filterProperty":"Prueflos"}'
